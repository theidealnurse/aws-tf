pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID = credentials('AWS_ACCESS_KEY_ID') // Create Jenkins credentials with your AWS access key
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY') // Jenkins credentials for AWS secret key
        AWS_DEFAULT_REGION = 'us-east-1' // Change to your desired region
        GODEBUG = 'asyncpreemptoff=1'  // Add the GODEBUG environment variable
    }
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/theidealnurse/aws-tf.git', branch: 'main'
            }
        }
        stage('Terraform Init') {
            steps {
                // Explicitly set GODEBUG for Init stage with Terraform commands
                sh 'export GODEBUG=asyncpreemptoff=1; terraform --version'
                sh 'export GODEBUG=asyncpreemptoff=1; terraform init'
                

            }
        }
        stage('Terraform Validate') {
            steps {
                // Explicitly set GODEBUG for Validate stage with Terraform command
                sh 'export GODEBUG=asyncpreemptoff=1; terraform validate'
            }
        }
        stage('Terraform Plan') {
            steps {
                // Explicitly set GODEBUG for Plan stage with Terraform command
                sh 'export GODEBUG=asyncpreemptoff=1; terraform plan -out=tfplan'
            }
        }

    
        stage('Terraform Apply') {
            steps {
                input 'Approve Terraform Apply?'  // Manual approval before apply
                // Explicitly set GODEBUG for Apply stage with Terraform command
                sh 'export GODEBUG=asyncpreemptoff=1; terraform apply tfplan'
            }
        }
    }

    post {
        success {
            echo 'Infrastructure provisioned successfully!'
        }
        failure {
            echo 'Infrastructure provisioning failed!'
        }
    }
}
